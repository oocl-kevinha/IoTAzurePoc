		"/IoTEvents/{deviceId}": {
			"get": {
				"description": "Retrieve device's events with the deviceId, sort by descending order",
				"tags": [
					"Events"
				],
				"operationId": "getIoTEvents",
				"consumes": [],
				"produces": [
					"application/json",
					"text/json"
				],
				"parameters": [
					{
						"name": "deviceId",
						"in": "path",
						"description": "Id of the Device for retrieving the Events",
						"required": true,
						"type": "string"
					},
					{
						"name": "rowNum",
						"in": "query",
						"description": "Retrieve events from (rowNum + 1) to (rowNum + 1 + pageSize)",
						"required": true,
						"type": "number",
						"format": "int32"
					},
					{
						"name": "pageSize",
						"in": "query",
						"description": "Used with pageNum parameter to retrieve portion of events",
						"required": true,
						"type": "number",
						"format": "int32"
					},
					{
						"name": "timeStamp",
						"in": "query",
						"description": "The max date (in millisecond) of events to be retrieved",
						"required": true,
						"type": "number",
						"format": "int32"
					}
				],
				"responses": {
					"200": {
						"schema": {
							"type": "object",
							"required": ["success"],
							"properties": {
								"success": {
									"type": "boolean"
								},
								"errMessage": {
									"type": "string"
								},
								"statusCode": {
									"type": "number",
									"format": "int32"
								},
								"data": {
									"type": "object",
									"properties": {
										"count": {
											"type": "number",
											"format": "int32"
										},
										"events": {
											"type": "array",
											"items": {
												"$ref": "#/definitions/GPSEvent"
											}
										}
									}
								}
							}
						}
					}
				},
				"deprecated": false
			}
		},
